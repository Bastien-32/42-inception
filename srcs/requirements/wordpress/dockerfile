FROM debian:bookworm-slim

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    php-fpm \
    php-cli \
    php-mysql \
	php-redis \
    mariadb-client \
    curl \
    ca-certificates \
    tar \
    less \
 && rm -rf /var/lib/apt/lists/*

# Config PHP-FPM : écoute sur TCP 9000 (au lieu d’un socket local)
RUN sed -i 's|^listen = .*|listen = 0.0.0.0:9000|' /etc/php/8.2/fpm/pool.d/www.conf

# Dossier runtime requis par php-fpm (pour le pid/logs)
RUN mkdir -p /run/php && chown -R www-data:www-data /run/php

# Met WordPress DIRECTEMENT dans /var/www/wordpress
RUN mkdir -p /var/www/wordpress && \
    curl -fsSL https://wordpress.org/latest.tar.gz \
      | tar -xz -C /var/www/wordpress --strip-components=1 && \
    chown -R www-data:www-data /var/www/wordpress

# Installer WP-CLI (outil d'admin WordPress en ligne de commande)
RUN curl -fsSL https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar -o /usr/local/bin/wp \
 && chmod +x /usr/local/bin/wp

COPY tools/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 9000

ENTRYPOINT ["/entrypoint.sh"]
